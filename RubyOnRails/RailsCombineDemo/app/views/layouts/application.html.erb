<!DOCTYPE html>
<html>
  <head>
    <title>RailsCombineDemo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/header" %>
    <%= yield %>

    <div>
      <%= flash_message(flash[:success], :success) if flash[:success] %>
      <%= flash_message(flash[:error], :error) if flash[:error] %>
      <%= flash_message(flash[:alert], :alert) if flash[:alert] %>
      <%= flash_message(flash[:notice], :notice) if flash[:notice] %>
    </div>
  </body>
</html>
